<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<GridPane fx:id="parsingSettingsPane" hgap="5.0"
	maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
	minHeight="300.0" minWidth="500.0" vgap="5.0"
	xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1">
	<columnConstraints>
		<ColumnConstraints hgrow="SOMETIMES" maxWidth="1.7976931348623157E308"
			minWidth="10.0" />
	</columnConstraints>
	<rowConstraints>
		<RowConstraints maxHeight="-Infinity" minHeight="-Infinity"
			vgrow="SOMETIMES" />
		<RowConstraints maxHeight="-Infinity" valignment="BOTTOM"
			vgrow="SOMETIMES" />
		<RowConstraints maxHeight="-Infinity" minHeight="-Infinity"
			vgrow="SOMETIMES" />
		<RowConstraints maxHeight="-Infinity" vgrow="SOMETIMES" />
		<RowConstraints maxHeight="-Infinity" minHeight="35.0"
			valignment="BOTTOM" vgrow="SOMETIMES" />
		<RowConstraints maxHeight="-Infinity" minHeight="-Infinity"
			vgrow="SOMETIMES" />
		<RowConstraints maxHeight="-Infinity" minHeight="-Infinity"
			vgrow="SOMETIMES" />
		<RowConstraints maxHeight="-Infinity" minHeight="-Infinity"
			vgrow="SOMETIMES" />
		<RowConstraints maxHeight="-Infinity" minHeight="-Infinity"
			vgrow="SOMETIMES" />
	</rowConstraints>
	<children>
		<Label text="Filename patterns" underline="true">
			<font>
				<Font name="System Bold" size="12.0" />
			</font>
			<graphic>
				<ImageView pickOnBounds="true" preserveRatio="true">
					<image>
						<Image url="@../img/file_search_16.png" />
					</image>
				</ImageView>
			</graphic>
		</Label>
		<Label text="Subtitle filename patterns (separated by comma):"
			GridPane.rowIndex="1" />
		<TextField fx:id="filenamePatternsTextField" promptText="comma-separated filename patterns"
			GridPane.rowIndex="2" />
		<Label text="Filename parsing" underline="true"
			GridPane.rowIndex="4">
			<font>
				<Font name="System Bold" size="12.0" />
			</font>
			<graphic>
				<ImageView pickOnBounds="true" preserveRatio="true">
					<image>
						<Image url="@../img/file_search_16.png" />
					</image>
				</ImageView>
			</graphic>
		</Label>
		<Label text="Parser:" GridPane.rowIndex="5" />
		<TableView fx:id="parsingServicesTableView" editable="true"
			minHeight="100.0" prefHeight="150.0" GridPane.rowIndex="6">
			<columns>
				<TableColumn fx:id="parsingServicesEnabledColumn"
					prefWidth="60.0" text="Enabled" />
				<TableColumn fx:id="parsingServicesNameColumn" editable="false"
					minWidth="25.0" prefWidth="100.0" text="Name" />
				<TableColumn fx:id="parsingServicesExampleColumn"
					editable="false" minWidth="25.0" prefWidth="400.0" text="Filename example" />
			</columns>
		</TableView>
		<Label text="(* = any string; leave empty to deny all)"
			GridPane.rowIndex="3" />
	</children>
	<padding>
		<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
	</padding>
</GridPane>
