<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<GridPane fx:id="inputPane" hgap="5.0" prefWidth="225.0" vgap="5.0" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1">
  <columnConstraints>
    <ColumnConstraints hgrow="SOMETIMES" maxWidth="1.7976931348623157E308" minWidth="-Infinity" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" vgrow="SOMETIMES" />
    <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" vgrow="SOMETIMES" />
      <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" vgrow="SOMETIMES" />
      <RowConstraints vgrow="SOMETIMES" />
      <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" valignment="BOTTOM" vgrow="SOMETIMES" />
      <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" valignment="BOTTOM" vgrow="SOMETIMES" />
  </rowConstraints>
   <children>
      <Label maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" text="If the series name matches" />
      <VBox maxHeight="-Infinity" maxWidth="-Infinity" spacing="3.0" GridPane.rowIndex="1">
         <children>
            <RadioButton fx:id="literalRadioBtn" mnemonicParsing="false" text="the literal string" />
            <RadioButton fx:id="simplePatternRadioBtn" mnemonicParsing="false" text="the pattern (* = any string)" />
            <RadioButton fx:id="regexRadioBtn" mnemonicParsing="false" text="the regular expression" />
         </children>
         <GridPane.margin>
            <Insets />
         </GridPane.margin>
      </VBox>
      <TextField fx:id="namePatternTxtFld" promptText="series name" GridPane.rowIndex="2" />
      <Label fx:id="patternErrorLbl" minHeight="25.0" prefHeight="25.0" textFill="RED" GridPane.rowIndex="3" GridPane.valignment="TOP" />
      <Label text="then replace it with:" GridPane.rowIndex="4" />
      <TextField fx:id="nameReplacementTxtFld" promptText="series name replacement" GridPane.rowIndex="5" />
   </children>
</GridPane>
