<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<watcherConfig>

	<watch>
		<directories>
			<dir>${sys:user.home}/Downloads</dir>
		</directories>
		<initialScan>true</initialScan>
	</watch>

	<parsing>
		<filenamePatterns>*.srt</filenamePatterns>
		<parsingServices>
			<parsingService enabled="true">addic7ed.com</parsingService>
			<parsingService enabled="false">italiansubs.net</parsingService>
			<parsingService enabled="true">subcentral.de</parsingService>
		</parsingServices>
	</parsing>


	<metadata>
		<release>
			<parsingServices>
				<parsingService enabled="true">release.scene</parsingService>
			</parsingServices>
			<metaTags>
				<tag>REAL</tag>
				<tag>PROPER</tag>
				<tag>REPACK</tag>
				<tag>DiRFIX</tag>
				<tag>NFOFIX</tag>
				<tag>iNTERNAL</tag>
			</metaTags>
			<databases>
				<db enabled="true">predb.me</db>
				<db enabled="true">xrel.to</db>
				<db enabled="true">orlydb.com</db>
			</databases>
			<guessing enabled="true">
				<standardReleases>
					<standardRelease tags="720p, HDTV, x264" group="2HD" assumeExistence="IF_NONE_FOUND" />
					<standardRelease tags="HDTV, x264" group="2HD" assumeExistence="IF_NONE_FOUND" />
					<standardRelease tags="720p, HDTV, x264" group="DIMENSION" assumeExistence="IF_NONE_FOUND" />
					<standardRelease tags="1080p, HDTV, x264" group="DIMENSION" assumeExistence="IF_NONE_FOUND" />
					<standardRelease tags="HDTV, x264" group="LOL" assumeExistence="IF_NONE_FOUND" />
					<standardRelease tags="720p, HDTV, x264" group="KILLERS" assumeExistence="IF_NONE_FOUND" />
					<standardRelease tags="HDTV, x264" group="KILLERS" assumeExistence="IF_NONE_FOUND" />
					<standardRelease tags="HDTV, x264" group="EXCELLENCE" assumeExistence="IF_NONE_FOUND" />
					<standardRelease tags="720p, HDTV, x264" group="REMARKABLE" assumeExistence="IF_NONE_FOUND" />
					<standardRelease tags="720p, WEB-DL, DD5.1, H.264" assumeExistence="IF_NONE_FOUND" />
					<standardRelease tags="1080p, WEB-DL, DD5.1, H.264" assumeExistence="IF_NONE_FOUND" />
					<standardRelease tags="720p, WEB-DL, DD5.1, H.264" group="Oosh" assumeExistence="IF_NONE_FOUND" />
					<standardRelease tags="1080p, WEB-DL, DD5.1, H.264" group="Oosh" assumeExistence="IF_NONE_FOUND" />
				</standardReleases>
			</guessing>
			<compatibility enabled="true">
				<compatibilities>
					<crossGroupCompatibility enabled="true" sourceGroup="ASAP" compatibleGroup="IMMERSE" symmetric="true" />
					<crossGroupCompatibility enabled="true" sourceGroup="EXCELLENCE" compatibleGroup="REMARKABLE" symmetric="true" />
					<crossGroupCompatibility enabled="true" sourceGroup="FQM" compatibleGroup="ORENJI" symmetric="true" />
					<crossGroupCompatibility enabled="true" sourceGroup="LOL" compatibleGroup="DIMENSION" symmetric="true" />
				</compatibilities>
			</compatibility>
		</release>
	</metadata>

	<standardizing>
		<preMetadataDb>
			<standardizers>
				<seriesNameStandardizer enabled="true" namePattern="Castle" namePatternMode="LITERAL" nameReplacement="Castle (2009)" />
				<seriesNameStandardizer enabled="true" namePattern="Clarence\W+US\W+2013\W*" namePatternMode="REGEX" nameReplacement="Clarence (US)" />
				<seriesNameStandardizer enabled="true" namePattern="Marry\W+Me" namePatternMode="REGEX" nameReplacement="Marry Me (2014)" />
				<seriesNameStandardizer enabled="true" namePattern="Resurrection\W+2014\W*" namePatternMode="REGEX" nameReplacement="Resurrection (US)" />
				<seriesNameStandardizer enabled="true" namePattern="Scandal" namePatternMode="LITERAL" nameReplacement="Scandal (US)" />
				<seriesNameStandardizer enabled="true" namePattern="Undercover\W+Boss" namePatternMode="REGEX" nameReplacement="Undercover Boss (US)" />

				<releaseTagsStandardizer enabled="true" queryTags="AAC2, 0" replacement="AAC2.0" queryMode="CONTAIN" replaceMode="MATCHED_SEQUENCE" ignoreOrder="false" />
				<releaseTagsStandardizer enabled="true" queryTags="DD5, 1" replacement="DD5.1" queryMode="CONTAIN" replaceMode="MATCHED_SEQUENCE" ignoreOrder="false" />
				<releaseTagsStandardizer enabled="true" queryTags="H, 264" replacement="H.264" queryMode="CONTAIN" replaceMode="MATCHED_SEQUENCE" ignoreOrder="false" />
				<releaseTagsStandardizer enabled="true" queryTags="H, 265" replacement="H.265" queryMode="CONTAIN" replaceMode="MATCHED_SEQUENCE" ignoreOrder="false" />
				<releaseTagsStandardizer enabled="true" queryTags="H264" replacement="H.264" queryMode="CONTAIN" replaceMode="MATCHED_SEQUENCE" ignoreOrder="false" />
				<releaseTagsStandardizer enabled="true" queryTags="H265" replacement="H.265" queryMode="CONTAIN" replaceMode="MATCHED_SEQUENCE" ignoreOrder="false" />
				<releaseTagsStandardizer enabled="true" queryTags="WEB, DL" replacement="WEB-DL" queryMode="CONTAIN" replaceMode="MATCHED_SEQUENCE" ignoreOrder="false" />
			</standardizers>
		</preMetadataDb>
		<postMetadataDb>
			<standardizers>
				<seriesNameStandardizer enabled="true" namePattern="Good\W+Wife" namePatternMode="REGEX" nameReplacement="The Good Wife" />

				<releaseTagsStandardizer enabled="true" queryTags="AAC2, 0" replacement="AAC2.0" queryMode="CONTAIN" replaceMode="MATCHED_SEQUENCE" ignoreOrder="false" />
				<releaseTagsStandardizer enabled="true" queryTags="DD5, 1" replacement="DD5.1" queryMode="CONTAIN" replaceMode="MATCHED_SEQUENCE" ignoreOrder="false" />
				<releaseTagsStandardizer enabled="true" queryTags="H, 264" replacement="H.264" queryMode="CONTAIN" replaceMode="MATCHED_SEQUENCE" ignoreOrder="false" />
				<releaseTagsStandardizer enabled="true" queryTags="H, 265" replacement="H.265" queryMode="CONTAIN" replaceMode="MATCHED_SEQUENCE" ignoreOrder="false" />
				<releaseTagsStandardizer enabled="true" queryTags="H264" replacement="H.264" queryMode="CONTAIN" replaceMode="MATCHED_SEQUENCE" ignoreOrder="false" />
				<releaseTagsStandardizer enabled="true" queryTags="H265" replacement="H.265" queryMode="CONTAIN" replaceMode="MATCHED_SEQUENCE" ignoreOrder="false" />
				<releaseTagsStandardizer enabled="true" queryTags="WEB, DL" replacement="WEB-DL" queryMode="CONTAIN" replaceMode="MATCHED_SEQUENCE" ignoreOrder="false" />
			</standardizers>
		</postMetadataDb>

		<subtitleLanguage>
			<parsingLanguages>
				<language tag="en" />
				<language tag="de" /> <!-- german -->
				<language tag="zh" /> <!-- chinese -->
			</parsingLanguages>
			<ouputLanguageFormat>NAME</ouputLanguageFormat>
			<ouputLanguage tag="en" />
			<customLanguagePatterns>
				<languagePattern pattern="VO" patternMode="LITERAL" languageTag="en" />
				<languagePattern pattern="VF" patternMode="LITERAL" languageTag="fr" />
				<languagePattern pattern="ger" patternMode="LITERAL" languageTag="de" />
				<languagePattern pattern="简体" patternMode="LITERAL" languageTag="zh-CN" /> <!-- simplified chinese -->
				<languagePattern pattern="繁体" patternMode="LITERAL" languageTag="zh-TW" /> <!-- traditional chinese -->
			</customLanguagePatterns>
			<customLanguageTextMappings>
				<languageTextMapping languageTag="en" text="VO" />
			</customLanguageTextMappings>
		</subtitleLanguage>
	</standardizing>

	<naming>
		<parameters>
			<param key="de.subcentral.core.naming.EpisodeNamer.alwaysIncludeTitle" value="false" />
			<param key="de.subcentral.core.naming.ReleaseNamer.preferName" value="true" />
			<param key="de.subcentral.core.naming.SubtitleAdjustmentNamer.includeGroup" value="true" />
		</parameters>
	</naming>

	<fileTransformation>
		<targetDir>!VO</targetDir>
		<deleteSource>false</deleteSource>
		<packing enabled="true">
			<sourceDeletionMode>DELETE</sourceDeletionMode>
			<winrar>
				<autoLocate>true</autoLocate>
				<rarExe></rarExe>
			</winrar>
		</packing>
	</fileTransformation>

</watcherConfig>